<h1 class="text-center mt-4"><%= @user.username %></h1>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card text-center shadow-sm rounded">
        <div class="card-header">

        </div>
        <div class="card-body">
          <%= gravatar_for @user %>
          <div class="card-text"><%= simple_format(@user.email) %></div>
          <% if logged_in? && @user == current_user %>
            <%= link_to 'Update', edit_user_path(@user), class: "btn btn-primary" %>
            <%= link_to 'Delete', users_path(@user.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          Last updated: <%= time_ago_in_words(@user.updated_at) %> ago
        </div>
      </div>
    </div>
  </div>
  <br>
</div>

<%= render 'articles/article' %>
